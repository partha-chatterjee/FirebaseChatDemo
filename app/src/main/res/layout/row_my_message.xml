<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joe Down"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp"

                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/txt_name_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joe Down"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"/>

            <View
                android:id="@+id/vw_grey_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:background="@color/grey"
                android:layout_below="@+id/txt_name"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hi "
                android:layout_below="@+id/vw_grey_line"
                android:padding="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/grytalk"

                />

            <TextView
                android:id="@+id/txt_msg_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/vw_grey_line"
                android:padding="10dp"
                android:gravity="right"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bluetalk"
                />


            <!-- <ImageView
                 android:layout_width="35dp"
                 android:layout_height="35dp"
                 android:src="@drawable/msg_icon_big"
                 android:layout_marginRight="30dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 />-->

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rl_msg"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/calendar_icon"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="03/7/2017"
                    android:textSize="12sp"
                    android:gravity="right|center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/watch_icon"
                    android:layout_marginRight="5dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="12sp"
                    android:text="06:07 PM"/>
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>